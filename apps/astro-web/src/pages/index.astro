---
import { SignedIn, SignedOut } from "@clerk/astro/components";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/layout/Header.astro";
import { Footer } from "@/components/layout/Footer";
import { LatestArticlesSection } from "@/components/home/LatestArticlesSection";
import { Button } from "@/components/ui/button";
import { ArrowRight, BookOpen, Users, Leaf } from "lucide-react";
import { Link } from "@/components/ui/link";
---

<Layout>
    <Header />
    
    <main class="flex flex-col min-h-screen">
        {/* Hero Section */}
        <section class="relative py-20 md:py-32 overflow-hidden bg-stone-50">
            <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"></div>
            <div class="container relative z-10 mx-auto px-4 text-center">
                <div class="inline-flex items-center rounded-full border px-3 py-1 text-sm font-medium bg-background shadow-xs mb-6 text-stone-600">
                    <span class="flex h-2 w-2 rounded-full bg-emerald-500 mr-2"></span>
                    Accepting Submissions for Vol 1, Issue 3
                </div>
                <h1 class="text-4xl md:text-6xl font-serif font-bold tracking-tight text-stone-900 mb-6 mx-auto max-w-4xl leading-tight">
                    International Research Journal of <span class="text-stone-600 italic">Ethnomedicine</span> and Practices
                </h1>
                <p class="text-lg md:text-xl text-stone-600 mb-8 mx-auto max-w-2xl leading-relaxed">
                    A peer-reviewed, interdisciplinary platform bridging traditional knowledge systems with contemporary scientific inquiry.
                </p>
                <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                    <SignedOut>
                        <Link href="/issues">
                            <Button size="lg" className="h-12 px-8 text-base">
                                Read Latest Issue <ArrowRight className="ml-2 h-4 w-4" />
                            </Button>
                        </Link>
                        <Link href="/submit">
                            <Button variant="outline" size="lg" className="h-12 px-8 text-base bg-white/50 backdrop-blur">
                                Submit Paper
                            </Button>
                        </Link>
                    </SignedOut>
                    <SignedIn>
                        <Link href="/dashboard">
                            <Button size="lg" className="h-12 px-8 text-base">
                                Go to Dashboard <ArrowRight className="ml-2 h-4 w-4" />
                            </Button>
                        </Link>
                        <Link href="/submit">
                            <Button variant="outline" size="lg" className="h-12 px-8 text-base bg-white/50 backdrop-blur">
                                Submit New Paper
                            </Button>
                        </Link>
                    </SignedIn>
                </div>
            </div>
        </section>

        {/* Mission / Stats */}
        <section class="py-16 md:py-24 bg-white border-y border-stone-100">
            <div class="container mx-auto px-4">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
                    <div class="p-6 rounded-2xl bg-stone-50 border border-stone-100">
                        <div class="mx-auto w-12 h-12 flex items-center justify-center rounded-full bg-stone-200 text-stone-700 mb-4">
                            <BookOpen className="h-6 w-6" />
                        </div>
                        <h3 class="text-xl font-serif font-semibold mb-2 text-stone-900">Open Access</h3>
                        <p class="text-stone-600">Free and unrestricted access to all published research immediately upon publication.</p>
                    </div>
                    <div class="p-6 rounded-2xl bg-stone-50 border border-stone-100">
                        <div class="mx-auto w-12 h-12 flex items-center justify-center rounded-full bg-stone-200 text-stone-700 mb-4">
                            <Leaf className="h-6 w-6" />
                        </div>
                        <h3 class="text-xl font-serif font-semibold mb-2 text-stone-900">Ethical Focus</h3>
                        <p class="text-stone-600">Committed to the ethical documentation and preservation of traditional medical knowledge.</p>
                    </div>
                    <div class="p-6 rounded-2xl bg-stone-50 border border-stone-100">
                        <div class="mx-auto w-12 h-12 flex items-center justify-center rounded-full bg-stone-200 text-stone-700 mb-4">
                            <Users className="h-6 w-6" />
                        </div>
                        <h3 class="text-xl font-serif font-semibold mb-2 text-stone-900">Peer Reviewed</h3>
                        <p class="text-stone-600">Rigorous blind peer-review process ensuring highest academic standards and validity.</p>
                    </div>
                </div>
            </div>
        </section>

        {/* Latest Content Preview */}
        <LatestArticlesSection client:load />
    </main>

    <Footer />
</Layout>
