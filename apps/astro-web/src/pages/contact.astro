---
import PublicLayout from "@/layouts/PublicLayout.astro";
import { Mail, Phone, MapPin, MessageSquare, Clock } from "lucide-react";
---

<PublicLayout title="Contact Us | International Research Journal of Ethnomedicine and Practices">
    <div class="relative py-20 overflow-hidden bg-stone-50">
        <!-- Abstract decorative shapes -->
        <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-emerald-100/30 rounded-full blur-3xl -mr-64 -mt-64"></div>
        <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-stone-200/40 rounded-full blur-3xl -ml-64 -mb-64"></div>

        <div class="container relative z-10 mx-auto px-4">
            <div class="max-w-6xl mx-auto">
                <div class="grid md:grid-cols-5 gap-16 items-start">
                    <!-- Contact Info -->
                    <div class="md:col-span-2 space-y-12">
                        <div>
                            <h1 class="text-4xl md:text-5xl font-serif font-bold text-stone-900 mb-6 leading-tight">Get in touch</h1>
                            <p class="text-lg text-stone-600 font-medium">Have questions about submissions, peer review, or publishing with us? We're here to help.</p>
                        </div>

                        <div class="space-y-8">
                            <div class="flex gap-6">
                                <div class="w-12 h-12 bg-white rounded-sm flex items-center justify-center text-emerald-600 border border-stone-100 shadow-sm shrink-0">
                                    <Mail size={20} />
                                </div>
                                <div class="space-y-1">
                                    <span class="text-[10px] font-bold text-stone-400 uppercase tracking-widest">Email Us</span>
                                    <p class="font-bold text-stone-900">editorial@irjep.org</p>
                                    <p class="text-sm text-stone-500 font-medium">General inquiries & support</p>
                                </div>
                            </div>

                            <div class="flex gap-6">
                                <div class="w-12 h-12 bg-white rounded-2xl flex items-center justify-center text-emerald-600 border border-stone-100 shadow-sm shrink-0">
                                    <Clock size={20} />
                                </div>
                                <div class="space-y-1">
                                    <span class="text-[10px] font-bold text-stone-400 uppercase tracking-widest">Working Hours</span>
                                    <p class="font-bold text-stone-900">Mon - Fri, 9:00 - 18:00</p>
                                    <p class="text-sm text-stone-500 font-medium">Response within 24-48 hours</p>
                                </div>
                            </div>

                            <div class="flex gap-6">
                                <div class="w-12 h-12 bg-white rounded-2xl flex items-center justify-center text-emerald-600 border border-stone-100 shadow-sm shrink-0">
                                    <MapPin size={20} />
                                </div>
                                <div class="space-y-1">
                                    <span class="text-[10px] font-bold text-stone-400 uppercase tracking-widest">Office</span>
                                    <p class="font-bold text-stone-900">Department of Ethnomedicine</p>
                                    <p class="text-sm text-stone-500 font-medium leading-relaxed">University Research Center, 124 Academic Ave,<br/>Cambridge, MA 02138, USA</p>
                                </div>
                            </div>
                        </div>

                        <div class="p-8 bg-stone-900 rounded-lg text-white space-y-4">
                            <div class="flex items-center gap-2 text-emerald-400">
                                <MessageSquare size={16} />
                                <span class="text-[10px] font-bold uppercase tracking-widest">Urgent matter?</span>
                            </div>
                            <h3 class="text-xl font-serif font-bold">Editorial Hotline</h3>
                            <p class="text-stone-400 text-sm leading-relaxed">For urgent editorial matters regarding active submissions, please include your Paper ID.</p>
                            <p class="text-lg font-bold pt-2">+1 (555) 012-3456</p>
                        </div>
                    </div>

                    <!-- Contact Form -->
                    <div class="md:col-span-3">
                        <div class="bg-white p-10 md:p-14 rounded-lg border border-stone-100 shadow-2xl shadow-stone-200/50">
                            <form class="space-y-8">
                                <div class="grid sm:grid-cols-2 gap-8">
                                    <div class="space-y-3">
                                        <label class="text-[10px] font-bold text-stone-400 uppercase tracking-widest ml-1">Full Name</label>
                                        <input type="text" placeholder="John Doe" class="w-full h-14 px-6 rounded-2xl bg-stone-50 border border-stone-100 focus:bg-white focus:border-emerald-500 focus:outline-none transition-all text-stone-900 font-medium" />
                                    </div>
                                    <div class="space-y-3">
                                        <label class="text-[10px] font-bold text-stone-400 uppercase tracking-widest ml-1">Email Address</label>
                                        <input type="email" placeholder="john@example.com" class="w-full h-14 px-6 rounded-2xl bg-stone-50 border border-stone-100 focus:bg-white focus:border-emerald-500 focus:outline-none transition-all text-stone-900 font-medium" />
                                    </div>
                                </div>

                                <div class="space-y-3">
                                    <label class="text-[10px] font-bold text-stone-400 uppercase tracking-widest ml-1">Subject</label>
                                    <select class="w-full h-14 px-6 rounded-2xl bg-stone-50 border border-stone-100 focus:bg-white focus:border-emerald-500 focus:outline-none transition-all text-stone-900 font-medium appearance-none">
                                        <option>General Inquiry</option>
                                        <option>Submission Query</option>
                                        <option>Peer Review Question</option>
                                        <option>Editorial Board Application</option>
                                        <option>Other</option>
                                    </select>
                                </div>

                                <div class="space-y-3">
                                    <label class="text-[10px] font-bold text-stone-400 uppercase tracking-widest ml-1">Message</label>
                                    <textarea rows="5" placeholder="How can we help you?" class="w-full p-6 rounded-2xl bg-stone-50 border border-stone-100 focus:bg-white focus:border-emerald-500 focus:outline-none transition-all text-stone-900 font-medium resize-none"></textarea>
                                </div>

                                <button type="submit" class="w-full h-16 rounded-lg bg-stone-900 hover:bg-stone-800 text-white font-bold uppercase tracking-widest text-xs transition-all shadow-xl shadow-stone-900/10 active:scale-[0.98]">
                                    Send Message
                                </button>

                                <p class="text-center text-[10px] text-stone-400 font-medium px-8">
                                    By clicking send, you agree to our <a href="/policies" class="text-emerald-600 hover:underline">privacy policy</a> and the storage of your contact information.
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</PublicLayout>
