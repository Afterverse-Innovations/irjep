---
import { SignedIn, SignedOut, UserButton, SignInButton } from "@clerk/astro/components";
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
---

<header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
    <div class="container mx-auto flex h-16 items-center justify-between px-4">
        <a href="/" class="flex items-center space-x-2">
            <span class="font-serif text-2xl font-bold tracking-tight text-primary">IRJEP</span>
        </a>

        <nav class="hidden md:flex items-center gap-6 text-sm font-medium text-muted-foreground">
            <a href="/about" class="hover:text-primary transition-colors">About1</a>
            <a href="/aim-scope" class="hover:text-primary transition-colors">Aim & Scope</a>
            <a href="/issues" class="hover:text-primary transition-colors">Issues</a>
            <a href="/editorial-board" class="hover:text-primary transition-colors">Editorial Board</a>
            <a href="/contact" class="hover:text-primary transition-colors">Contact</a>
        </nav>

        <div class="flex items-center gap-4">
            <SignedOut>
                <SignInButton mode="modal" class={cn(buttonVariants({ variant: "ghost", size: "sm" }))}>
                    Log In
                </SignInButton>
            </SignedOut>
            <SignedIn>
                <a href="/dashboard" class={cn(buttonVariants({ variant: "ghost", size: "sm" }))}>
                    Dashboard
                </a>
                <UserButton />
            </SignedIn>
            <a href="/submit" class={cn(buttonVariants({ size: "sm" }))}>
                Submit Paper
            </a>
        </div>
    </div>
</header>
