{
  "name": "irjep-monorepo",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=web",
    "dev": "turbo dev convex:dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "preview": "npm run preview -w web",
    "deploy": "npm run deploy -w web",
    "cf-typegen": "npm run cf-typegen -w web"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "latest",
    "turbo": "^2.7.3",
    "wrangler": "^4.58.0"
  }
}