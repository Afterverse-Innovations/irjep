{
  "name": "irjep-monorepo",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "node scripts/dev.mjs dev && turbo dev convex:dev",
    "dev:prod": "node scripts/dev.mjs prod && turbo dev:prod convex:prod",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "convex:dev": "convex dev",
    "convex:prod": "convex deploy",
    "astro:dev": "npm run dev -w astro-web",
    "codegen": "convex codegen"
  },
  "devDependencies": {
    "turbo": "^2.7.3",
    "convex": "^1.31.3"
  }
}